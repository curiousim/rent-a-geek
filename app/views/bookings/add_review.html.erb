<div class="container">
  <div class="mt-5">
    <h1>Add a review</h1>
    <div>Review from: <%= current_user.first_name %></div>
    <div>For: <%= link_to  Geek.find(@booking.geek_id).name, geek_path(Geek.find(@booking.geek_id)) %> </div>
  </div>
  <div class="form-inputs">
    <%= simple_form_for [@booking], html: { class: 'form-group' }, method: :patch  do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :rating, as: :select, label: 'How good was the service?', collection: [1, 2, 3, 4, 5] %>
    <%= f.input :review_content, as: :text, label: "Write your review here", :input_html => { :cols => 5, :rows => 10 }%>
    <%= f.button :submit, "Add review", class: "btn btn-primary col" %>
    <% end %>
  <div>
</div>
