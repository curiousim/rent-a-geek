<div class="container padding-home">
    <div class="row">
      <div class="col-sm-5">
  <h1 class="main">Book A Geek</h1>
        <div class="search-form">

          <p class="slogan">Find someone fun and quirky for all those things you donâ€™t quite understand.</p>
          <%= form_for(:search, url: geeks_path, method: :get) do |f| %>
          <div class="form-group">
            <%= f.label :location, "Where" %>
            <%= f.text_field :location, class:'form-control', placeholder:"Location" %>
          </div>

          <div class="form-group">
            <%= f.label :date %>
            <%= f.text_field :date, class:'form-control', placeholder:"dd/mm/yyyy" %>
          </div>

          <div class="form-group">
            <%= f.label :duration %>
            <%= f.select :duration, Geek::HOURS, {}, {class:"form-control"} %>
          </div>

          <%= f.submit "Search", class: 'btn btn-block btn-danger' %>
          <% end %>

        </div>
      </div>
    </div>
</div>

