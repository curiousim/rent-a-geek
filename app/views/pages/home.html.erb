<section id="home-page">
  <div class="container padding-home">
    <div class="row">
      <div class="col-sm-5">
        <h1 class="main">Book A Geek</h1>
        <div class="search-form">
          <p class="slogan">Find someone fun and quirky for all those things you donâ€™t quite understand.</p>
          <%= form_for(:search, url: geeks_path, method: :get) do |f| %>
          <div class="form-group">
            <%= f.label :name, "Who you want to see today?" %>
            <%= f.text_field :name, class:'form-control', placeholder:"Type something" %>
          </div>
          <div class="form-group">
            <%= f.label :category %>
            <%= f.select :category, ["All"] + Geek::CATEGORIES, {}, {class:"form-control"} %>
          </div>
          <%= f.submit "Search", class: 'btn btn-block btn-danger' %>
          <% end %>
          <div class="mt-4 text-center"><%= link_to  "See all our geeks", geeks_path %></div>
        </div>
      </div>
    </div>
  </div>
</section>
